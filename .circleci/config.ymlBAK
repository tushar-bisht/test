version: 2
orbs:
    hello: circleci/ubuntu@20.04
workflows:
  version: 2
  build-deploy:
    jobs:
      - build-job
      - deploy-job:
          requires:
            - build-job # Only run deploy job once build job has completed
          filters:
            branches:
              only: circle # Only run deploy job when commit is on the main branch
